<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent" >

	<SeekBar
	    android:id="@+id/tag_music_bar"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_alignParentLeft="true"
	    android:layout_below="@+id/tag_file_artist"
	    android:layout_toLeftOf="@+id/linearLayout1"
	    android:enabled="false" />

	<ExpandableListView
		android:id="@+id/tagListView"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentLeft="true"
		android:layout_below="@+id/tag_music_bar"
		android:layout_toLeftOf="@+id/linearLayout1" >
	</ExpandableListView>

	<TextView
		android:id="@+id/tag_file_title"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentLeft="true"
		android:layout_alignParentTop="true"
		android:layout_toLeftOf="@+id/linearLayout1"
		android:text="No file selected"
		android:textAppearance="?android:attr/textAppearanceMedium" />

	<TextView
		android:id="@+id/tag_file_artist"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentLeft="true"
		android:layout_below="@+id/tag_file_title"
		android:layout_toLeftOf="@+id/linearLayout1"
		android:textAppearance="?android:attr/textAppearanceSmall" />

	<LinearLayout
		android:id="@+id/linearLayout1"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentRight="true"
		android:layout_alignParentTop="true"
		android:orientation="vertical" >

		<ImageButton
		    android:id="@+id/tag_play_button"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:src="@drawable/ic_media_play" />

		<ImageButton
		    android:id="@+id/tag_prev_button"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:src="@drawable/ic_media_previous" />

		<ImageButton
		    android:id="@+id/tag_next_button"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:scaleType="matrix"
		    android:src="@drawable/ic_media_next" />
		
		<ImageButton
		    android:id="@+id/tag_stop_button"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:enabled="false"
		    android:scaleType="matrix"
		    android:src="@drawable/ic_media_stop" />

	</LinearLayout>

	

</RelativeLayout>